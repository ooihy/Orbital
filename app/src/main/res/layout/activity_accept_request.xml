<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcceptRequest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="ACCEPT/REJECT REQUEST FOR COLLABORATION FORM"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_width="match_parent" />


            <TextView
                android:id="@+id/textViewPriorInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It is assumed that the requester(freelancer) has contacted you to discuss the project details prior to sending you the collaboration request. If he/she has not, then you may wish to obtain the requester's contact details from the 'View Requester Profile' button below to discuss."
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="377dp" />

            <Button
                android:id="@+id/buttonViewRequesterProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Requester Profile"
                tools:layout_editor_absoluteX="223dp"
                tools:layout_editor_absoluteY="466dp" />


            <TextView
                android:id="@+id/textViewTitleHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Project Title:"
                android:textColor="@color/fui_bgPhone"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="53dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="53dp" />

            <TextView
                android:id="@+id/textViewFormSubmitDateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Requester(freelancer) submitted this collaboration request form on the date of: "
                android:textColor="@color/fui_bgPhone"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="53dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/textViewFormSubmitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="299dp"
                tools:layout_height="wrap_content" />



            <TextView
                android:id="@+id/textViewChangesHeader"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Maximum number of changes you can make during the course of the project, unless agreed by the other party."
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="53dp"
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="83dp" />


            <TextView
                android:id="@+id/textViewPayHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Minimum pay the requester(freelancer) has to receive:"
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="53dp" />


            <TextView
                android:id="@+id/textViewPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="140dp" />

            <TextView
                android:id="@+id/textViewDeadlineHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Agreed project duration:"
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="53dp" />

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="224dp" />

            <TextView
                android:id="@+id/textViewWaitHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="During the course of the project, if the requester(freelancer) contacts you to clarify certain matters regarding the project, you will need to respond with the stated number of days below. Otherwise, the other party will have the right to file a report of non-response against you. This also applies the other way round: "
                android:textColor="@color/fui_bgPhone"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="53dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/textViewWait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="299dp" />

            <TextView
                android:id="@+id/textViewInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nPlease check if information stated above is as agreed with the requester(freelancer). If you agree with the terms, press 'Accept' and proceed to make payment(base amount) to the app's administrator. Do note that the requester(freelancer) will not be able to start work until you have transferred the payment. We will keep the payment securely with us during the course of the project. Should any dispute occur during the course of the project, please remember to file a report and we will handle it on a case-by-case basis. You may navigate to the FILE A REPORT page on the left drawer of the main page. Should the project terminate without any hiccups, please navigate to the END PROJECT page which is located on the left drawer of the main page and we will then transfer the payment to the requester(freelancer) and make any necessary refunds to you if needed.\n\nOtherwise, if you do not agree with the terms, press 'reject' and contact the requester(freelancer) again to renegotiate the terms. Do note that the requester(freelancer) will then need to resubmit a collaboration request."
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="377dp" />


            <TextView
                android:id="@+id/textViewInstructionScreenshot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nYou are strongly advised to keep a screenshot of this page for future reference."
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="377dp" />

            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCEPT AND PAY"
                tools:layout_editor_absoluteX="223dp"
                tools:layout_editor_absoluteY="466dp" />

            <Button
                android:id="@+id/buttonReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REJECT"
                tools:layout_editor_absoluteX="74dp"
                tools:layout_editor_absoluteY="466dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>